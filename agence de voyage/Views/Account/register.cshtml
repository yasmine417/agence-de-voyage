@model agence_de_voyage.Models.client

@{
    ViewData["Title"] = "Inscription";
}

<!-- Message de succès -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["SuccessMessage"]
    </div>
}


<div class="text-center mb-4">
    <h2>Inscription</h2>
    <p>Vous avez déjà un compte ? <a href="@Url.Action("Login", "Account")">Se connecter</a></p>
</div>


@if (!ViewData.ModelState.IsValid && !ViewData.ModelState.ContainsKey("ConfirmPassword"))
{
    <div class="alert alert-danger">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
}


<div class="d-flex justify-content-center">
    <div class="card shadow-sm p-4" style="max-width: 400px; width: 100%;">
        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label for="Nom" class="form-label">Nom</label>
                <input type="text" class="form-control" id="Nom" name="Nom" value="@Model.Nom" required />
            </div>
            <div class="mb-3">
                <label for="Prenom" class="form-label">Prénom</label>
                <input type="text" class="form-control" id="Prenom" name="Prenom" value="@Model.Prenom" required />
            </div>

            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label">Mot de passe</label>
                <input type="password" class="form-control" id="Password" name="Password" required />
            </div>

            <div class="mb-3">
                <label for="ConfirmPassword" class="form-label">Confirmer le mot de passe</label>
                <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required />
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary w-100">S'inscrire</button>
        </form>
    </div>
</div>


<style>
    .form-control {
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
        }

        .form-control:hover {
            border-color: #0056b3;
            background-color: #f8f9fa;
        }

    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
</style>
